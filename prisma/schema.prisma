generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @default(uuid()) @id
  username  String?
  password String?
  description String? @default("No description")
  dateCreated DateTime @default(now())
  stories Story[]
}

model Story {
  id        String      @default(uuid()) @id
  title     String
  description   String?
  dateCreated DateTime @default(now())
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String
  chapters Chapter[]
}

model Chapter {
  id        String      @default(uuid()) @id
  title     String
  content   String?
  dateCreated DateTime @default(now())
  story    Story?    @relation(fields: [storyId], references: [id])
  storyId  String
  order Int? @default(1)
}
